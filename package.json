{
  "name": "membership-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "clean-layer": "rimraf layer",
    "codegen": "graphql-codegen",
    "copy-assets": "copyfiles -f src/apiBase/tools/templates/* dist/templates",
    "build-layer": "mkdir -p layer/nodejs && cp tools/layer-package.json layer/nodejs/package.json && cd layer/nodejs && npm install --production",
    "exec-deploy-staging": "serverless deploy --stage Staging",
    "deploy-staging": "npm-run-all build copy-assets build-layer exec-deploy-staging",
    "exec-deploy-prod": "serverless deploy --stage Prod", 
    "deploy-prod": "npm-run-all build copy-assets build-layer exec-deploy-prod",
    "initdb": "ts-node tools/initdb",
    "lint": "echo 'Linting disabled - TSLint deprecated, ESLint migration pending'",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc",
    "rebuild-layer": "npm-run-all clean-layer build-layer",
    "dev:start": "npm-run-all build copy-assets startDebug",
    "dev:watch": "npm run tsc-watch --onSuccess \"node dist/index.js\"",
    "dev": "nodemon --watch src -e ts,ejs --exec npm run dev:start",
    "start": "node .",
    "startDebug": "node --inspect=0.0.0.0:9229 .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "serverless-local": "serverless invoke local -f api"
  },
  "keywords": [],
  "author": "Live Church Solutions",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@churchapps/apihelper": "0.0.24",
    "@codegenie/serverless-express": "^4.16.0",
    "@hubspot/api-client": "^13.0.0",
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "inversify": "^6.2.2",
    "inversify-express-utils": "^6.5.0",
    "jsonwebtoken": "^9.0.2",
    "node-geocoder": "^4.4.1",
    "reflect-metadata": "^0.2.2",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node-geocoder": "^4.2.6",
    "@types/uuid": "^10.0.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "serverless": "3.39.0",
    "serverless-plugin-utils": "^0.2.0",
    "ts-node": "^10.9.2",
    "tsc-watch": "^7.1.1",
    "typescript": "^5.8.3"
  }
}
